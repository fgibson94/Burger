<h1>BURGERS!</h1>

<h2>Menu</h2>

<ul>
  {{#each burgers}}
  <li>
    <p>
      {{burger_name}}
        <button class="delete-burger" data-name="{{burger_name}}" type="delete">Delete Burger</button>

        <button class="update-burger" data-name="{{burger_name}}" data-eatburger="{{devoured}}" type="update">Devour Burger</button>
    </p>
  </li>
  {{/each}}
</ul>



<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>
  

  <button type="submit" >Add Burger</button>
</form>